@{
    ViewData["Title"] = "Home Page";

    var student = ViewData["student"] as TvcDay03Views.Models.Student;
    var students = ViewData["students"] as List<TvcDay03Views.Models.Student>;
}

<div class="text-center">
    <h1 class="display-4">Welcome, @ViewData["name"]</h1>
    <hr/>
    
</div>
<div class="alert alert-infor">
    <h2>Thông tin sinh viên</h2>
    <p>Name: @student.Name</p>
    <p>Age: @student.Age</p>
</div>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Họ tên</th>
                <th>Tuổi</th>
                <th>Giới tính</th>
                <th>Hoạt động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in students)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="text-success">✔ Đang học</span>
                        }
                        else
                        {
                            <span class="text-danger">✘ Tạm nghỉ</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
